  "bugs": {
    "url": "https://github.com/tool3/docsify-action/issues"
  },
  "homepage": "https://github.com/tool3/docsify-action",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^3.0.0"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.20.5",
    "eslint": "^7.2.0",
    "husky": "^3.1.0",
    "jest": "^25.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add ."
    }
  }
