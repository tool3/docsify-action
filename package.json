  "bugs": {
    "url": "https://github.com/tool3/docsify-action/issues"
  },
  "homepage": "https://github.com/tool3/docsify-action",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.22.3",
    "eslint": "^9.12.0",
    "husky": "^9.1.3",
    "jest": "^29.7.0"
